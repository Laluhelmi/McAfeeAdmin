<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/tes"
    android:background="@drawable/gradient"
    tools:context="com.example.l.macprojectadmin.MainActivity">


    <android.support.v7.widget.Toolbar
        android:id="@+id/my_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="#b3f0ff"
        android:elevation="5dp"
        android:theme="@style/ThemeOverlay.AppCompat.ActionBar"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light">
     <RelativeLayout
         android:layout_width="match_parent"
         android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_centerHorizontal="true"
            android:layout_width="wrap_content"
            android:layout_height="900dp">
            <ImageView
                android:layout_marginRight="30dp"
                android:src="@drawable/kimslogo"
                android:layout_width="250dp"
                android:layout_height="wrap_content" />

        </RelativeLayout>
         <ImageView
             android:id="@+id/profile"
             android:layout_marginRight="10dp"
             android:layout_centerVertical="true"
             android:layout_alignParentRight="true"
             android:src="@drawable/account"
             android:layout_width="30dp"
             android:layout_height="30dp" />

     </RelativeLayout>
    </android.support.v7.widget.Toolbar>

    <ImageView
        android:id="@+id/logokims"
        android:layout_below="@+id/my_toolbar"
        android:layout_width="130dp"
        android:layout_height="90dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="16dp"
        android:src="@drawable/kims1" />


<LinearLayout
    android:layout_marginTop="0dp"
    android:id="@+id/container"
    android:layout_centerHorizontal="true"
    android:padding="10dp"
    android:layout_centerVertical="true"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <LinearLayout
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:elevation="5dp"
        android:background="@drawable/box"
        android:layout_weight="1"
        android:layout_margin="5dp"
            android:id="@+id/rvalidasi"
        android:layout_width="match_parent"
        android:layout_height="100dp">
        <ImageView
            android:id="@+id/gambar1"
            android:src="@drawable/hand"
            android:layout_width="70dp"
            android:layout_centerHorizontal="true"
            android:layout_height="60dp"
            android:layout_marginTop="3dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:text="Notifikasi \n Validasi"
                android:textColor="@android:color/black"
                android:layout_below="@+id/gambar1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="5"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle"
                android:id="@+id/notifcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
         </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/box"
            android:layout_weight="1"
            android:elevation="5dp"
            android:id="@+id/rnotif"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:src="@drawable/notifclaim"
                android:layout_width="70dp"
                android:id="@+id/gambar2"
                android:layout_centerHorizontal="true"
                android:layout_height="60dp" />
            <TextView
                android:layout_centerHorizontal="true"
                android:text="Notifikasi \n   Claim"
                android:textColor="@android:color/black"
                android:layout_below="@+id/gambar2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
            <TextView
                android:text="2"
                android:textColor="#ffffff"
                android:gravity="center"
                android:layout_margin="1dp"
                android:layout_alignParentLeft="true"
                android:background="@drawable/circle"
                android:id="@+id/claimcount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:elevation="5dp"
            android:background="@drawable/box"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:id="@+id/toko"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:src="@drawable/toko"
                android:layout_width="70dp"
                android:id="@+id/gambar3"
                android:layout_centerHorizontal="true"
                android:layout_height="70dp"
                android:layout_marginTop="5dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:text="Toko"
                android:textColor="@android:color/black"
                android:layout_below="@+id/gambar3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"/>
        </RelativeLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="25dp"
        android:orientation="horizontal"
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/linier">
        <RelativeLayout
            android:id="@+id/produk"
            android:elevation="5dp"
            android:background="@drawable/box"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:id="@+id/gambar4"
                android:src="@drawable/mcafee15"
                android:layout_width="70dp"
                android:layout_centerHorizontal="true"
                android:layout_height="70dp"
                android:layout_marginTop="6dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:text="Produk"
                android:layout_marginTop="3dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/gambar4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>
        <RelativeLayout
            android:background="@drawable/box"
            android:layout_weight="1"
            android:id="@+id/reseller"
            android:elevation="5dp"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:layout_width="70dp"
                android:id="@+id/gambar5"
                android:layout_centerHorizontal="true"
                android:layout_height="62dp"
                android:src="@drawable/seller"
                android:layout_marginTop="10dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:text="Sales"
                android:textColor="@android:color/black"
                android:layout_below="@+id/gambar5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"/>
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/iklan"
            android:elevation="5dp"
            android:background="@drawable/box"
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp">
            <ImageView
                android:src="@drawable/ads"
                android:layout_width="70dp"
                android:id="@+id/gambar6"
                android:layout_centerHorizontal="true"
                android:layout_height="70dp"
                android:layout_marginTop="2dp"/>
            <TextView
                android:layout_centerHorizontal="true"
                android:text="Iklan"
                android:layout_marginTop="8dp"
                android:textColor="@android:color/black"
                android:layout_below="@+id/gambar6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />
        </RelativeLayout>


    </LinearLayout>

</LinearLayout>
    <ImageView
        android:id="@+id/logomcafee"
        android:layout_below="@+id/container"
        android:layout_width="230dp"
        android:layout_height="200dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="55dp"
        android:layout_marginBottom="50dp"
        android:src="@drawable/mcafee0" />

</RelativeLayout>
