<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent">
    <EditText
        android:inputType="textPassword"
        android:id="@+id/passwordlama"
    android:hint="Masukkan Password Lama"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/passwordbaru"
        android:hint="Masukkan Password Baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:inputType="textPassword"
        android:id="@+id/konfirmasipasswordbaru"
        android:hint="Konfirmasi Password Baru"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button

        android:text="simpan"
        android:id="@+id/simpanubah"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
